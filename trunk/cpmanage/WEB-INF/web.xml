<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>GameService</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>conf.dir</param-name>
    <param-value></param-value>
  </context-param>
  <context-param>
    <param-name>JCZQ_SPF_MATCH</param-name>
    <param-value>/opt/export/tdata/jczq/jczq_spf.xml</param-value>
  </context-param>
  <context-param>
    <param-name>JCZQ_CBF_MATCH</param-name>
    <param-value>/opt/export/tdata/jczq/jczq_cbf.xml</param-value>
  </context-param>
  <context-param>
    <param-name>JCZQ_BQC_MATCH</param-name>
    <param-value>/opt/export/tdata/jczq/jczq_bqc.xml</param-value>
  </context-param>
  <context-param>
    <param-name>JCZQ_JQS_MATCH</param-name>
    <param-value>/opt/export/tdata/jczq/jczq_jqs.xml</param-value>
  </context-param>
  <context-param>
    <param-name>JCLQ_MATCH_SF</param-name>
    <param-value>/opt/export/tdata/jclq/jclq_sf.xml</param-value>
  </context-param>
  <context-param>
    <param-name>JCLQ_MATCH_RFSF</param-name>
    <param-value>/opt/export/tdata/jclq/jclq_rfsf.xml</param-value>
  </context-param>
  <context-param>
    <param-name>JCLQ_MATCH_SFC</param-name>
    <param-value>/opt/export/tdata/jclq/jclq_sfc.xml</param-value>
  </context-param>
  <context-param>
    <param-name>JCLQ_MATCH_DXF</param-name>
    <param-value>/opt/export/tdata/jclq/jclq_dxf.xml</param-value>
  </context-param>
  <context-param>
    <param-name>JCLQ_MATCH_HH</param-name>
    <param-value>/opt/export/tdata/jclq/jclq_hh.xml</param-value>
  </context-param>

  <context-param>
    <param-name>JCMC_MATCH</param-name>
    <param-value>/opt/export/tdata/jcmc/</param-value>
  </context-param>
  <context-param>
    <param-name>BEIDAN_MATCH</param-name>
    <param-value>/opt/export/tdata/beid</param-value>
  </context-param>

  <listener>
    <listener-class>com.rbc.frame.RbcFrameListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>rbc-action</servlet-name>
    <servlet-class>com.rbc.frame.core.ActionServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>rbc-action</servlet-name>
    <url-pattern>*.aspx</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>rbc-service</servlet-name>
    <servlet-class>com.rbc.frame.http.serv.ServiceRsa</servlet-class>
    <init-param>
      <param-name>key_dir</param-name>
      <param-value>/opt/gcenter/agentlic</param-value>
    </init-param>
    <init-param>
      <param-name>dev</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>rbc-service</servlet-name>
    <url-pattern>/rbc.svc</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RandCodeServlet</servlet-name>
    <servlet-class>com.rbc.frame.RandCodeServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>RandCodeServlet</servlet-name>
    <url-pattern>*.jo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RecvServlet</servlet-name>
    <servlet-class>com.caipiao.service.recv.RecvServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
     <servlet-name>RecvServlet</servlet-name>
     <url-pattern>/notify.to</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>Encoding</filter-name>
    <filter-class>com.rbc.frame.core.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>webfilter</filter-name>
    <filter-class>com.caipiao.cpweb.WebFilter</filter-class>
    <init-param>
      <param-name>url</param-name>
      <param-value>login.html,login.aspx,alogin.aspx,msg.aspx,logout.aspx</param-value>
    </init-param>
    <init-param>
      <param-name>fid</param-name>
      <param-value>change_user_pwd</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>webfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
